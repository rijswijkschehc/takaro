<nav aria-label="breadcrumb">
  <ol class="breadcrumb m-0">
    <% breadcrumbs.each do |breadcrumb| %>
      <% if breadcrumb.link? %>
        <li class="breadcrumb-item">
          <%= link_to breadcrumb.name, breadcrumb.path %>
        </li>
      <% else %>
        <li class="breadcrumb-item active"><%= breadcrumb.name %></li>
      <% end %>
    <% end %>
  </ol>
</nav>
