<div class="row justify-content-center">
  <div class="col-sm-10 col-md-8 col-lg-4 mt-5">
    <div class="card">
      <h5 class="card-header"><%= _('Reset your password') %></h5>
      <div class="card-body">
        <%= simple_form_for(resource,
                            as: resource_name,
                            url: password_path(resource_name),
                            wrapper: :floating_labels_form,
                            defaults: { placeholder: 'true' },
                            html: { method: :put }) do |f| %>
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>
          <%= f.input :password,
                      label: _('New password'),
                      autofocus: true,
                      hint: format(_('%<minimum_password_length>i characters minimum'),
                                   minimum_password_length: @minimum_password_length),
                      input_html: { autocomplete: 'new-password' } %>
          <%= f.input :password_confirmation,
                      label: _('Confirm your new password'),
                      input_html: { autocomplete: 'new-password' } %>
          <%= f.submit _('Change my password'), class: 'btn btn-primary w-100' %>
        <% end %>
      </div>
      <div class="card-footer text-center">
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</div>
