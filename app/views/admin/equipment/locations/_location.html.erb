<% current_location, children = location %>

<li class="list-group-item">
  <div class="row">
    <div class="col"><%= link_to current_location.name, admin_equipment_location_path(current_location) %></div>
    <div class="col"><%= current_location.owner %></div>
    <div class="col">
      <% if current_location.lock.present? %>
        <%= current_location.decorate.lock.number_and_code(link: true) %>
      <% end %>
    </div>
  </div>

  <% if children.present? %>
    <ul class="list-group">
      <% children.each do |child| %>
        <%= render partial: 'location', locals: { location: child } %>
      <% end %>
    </ul>
  <% end %>
</li>
