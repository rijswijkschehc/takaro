<%= simple_form_for([:admin, @principle]) do |f| %>
  <%= f.input :name %>
  <%= f.association :possession_phase %>
  <%= f.input :tagline %>
  <%= f.input :icon %>
  <%= f.input :hex_color %>
  <%= f.input :description, as: :rich_text_area %>
  <%= f.simple_fields_for :principle_steps do |psf| %>
    <%= psf.input :id, as: :hidden %>
    <%= psf.association :step, as: :hidden %>
    <%= psf.input :description, as: :rich_text_area, label: psf.object.step.name %>
  <% end %>
  <%= f.submit %>
<% end %>
