<div class="row page-header">
  <div class="col-12 page-header-heading">
    <h1><%= _('Static pages') %></h1>
    <%= link_to _('New static page'), new_admin_static_page_path, class: 'btn btn-outline-primary' %>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-body">
        <table class="table">
          <thead>
          <tr>
            <th><%= _('Title') %></th>
          </tr>
          </thead>
          <tbody>
          <%= render @static_pages %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
