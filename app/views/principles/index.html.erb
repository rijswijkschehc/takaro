<div class="row page-header pb-0">
  <div class="col-12 page-header-heading">
    <h1><%= _('8 tactical principles') %></h1>
  </div>
  <div class="col-12">
    <%= static_section(identifier: '8_tactische_principes_intro') %>
  </div>
  <div class="col-12">
    <%= educate_navigation(active: :principles) %>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-body">
        <table class="table table-bordered bg-dark text-white">
          <thead>
          <tr>
            <th><%= image_pack_tag('speelwijze.svg', class: 'principle-logo-sm', alt: _('RHC playing style')) %></th>
            <% @steps.each do |step| %>
              <th><%= step.name %></th>
            <% end %>
          </tr>
          </thead>
          <tbody>
          <% @principles.each do |principle| %>
            <tr>
              <th><%= link_to image_pack_tag("#{principle.name.downcase}.svg", class: 'principle-logo-sm', alt: principle.name), principle %></th>
              <% @steps.each do |step| %>
                <%= tag.td(principle.principle_steps.find_by(step: step)&.tagline, style: { 'background:': "##{principle.hex_color}" }) %>
              <% end %>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
